{% extends 'admin/base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <div class="mb-4"><a class="text-secondary" href="{{ path('index') }}"><i class="fa-solid fa-arrow-turn-up fa-rotate-270 text-secondary"></i> Accueil
        </a>
    </div>
    <h1>Categories</h1>
    <div class="mt-2 mb-2 btn btn-info">
        <a class="text-decoration-none text-white" href="{{ path('app_admin_category_new') }}">Créer une nouvelle catégorie</a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr class="position-relative">
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a class="stretched-link" href="{{ path('app_admin_category_edit', {'id': category.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
