{% extends 'admin/base.html.twig' %}

{% block title %}ImageCategory index{% endblock %}

{% block body %}
    <div class="mb-4"><a class="text-secondary" href="{{ path('index') }}"><i class="fa-solid fa-arrow-turn-up fa-rotate-270 text-secondary"></i> Accueil
        </a>
    </div>
    <h1>Les images des catégories</h1>
    <div class="mt-2 mb-2 btn btn-info"><a href="{{ path('app_admin_image_category_new') }}" class="text-decoration-none text-secondary">
            Ajouter une image à une catégorie</a>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image background</th>
                <th> Image CategoryCharacter</th>
                <th> ImageCategoryName</th>
                <th>Mis à jour le</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for image_category in image_categories %}
            <tr class="position-relative">
                <td>{{ image_category.id }}</td>
                <td>{{ image_category.background }}</td>
                <td>{{ image_category.categoryCharacter }}</td>
                <td>{{ image_category.categoryName }}</td>
                <td>{{ image_category.updated ? image_category.updated|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_image_category_edit', {'id': image_category.id}) }}" class="stretched-link">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
