<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>Id</th>
        <th>Image background</th>
        <th> Image CategoryCharacter</th>
        <th> ImageCategoryName</th>
        <th>Mis à jour le</th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
    {% for image_category in image_categories %}
        <tr class="position-relative">
            <td>{{ image_category.id }}</td>
            <td>{{ image_category.background }}</td>
            <td>{{ image_category.categoryCharacter }}</td>
            <td>{{ image_category.categoryName }}</td>
            <td>{{ image_category.updated ? image_category.updated|date('Y-m-d H:i:s') : '' }}</td>
            <td>
                <a href="{{ path('app_admin_image_category_edit', {'id': image_category.id}) }}" class="stretched-link">Modifier</a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="3">Aucune image trouvé</td>
            <td colspan="3">
                <a href="{{ path('app_admin_image_category_new') }}" class="stretched-link">Ajouter des images</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
