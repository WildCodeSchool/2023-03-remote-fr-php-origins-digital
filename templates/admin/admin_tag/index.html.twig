{% extends 'admin/base.html.twig' %}

{% block title %}Tag index{% endblock %}

{% block body %}
    <div class="mb-4"><a class="text-secondary" href="{{ path('index') }}"><i class="fa-solid fa-arrow-turn-up fa-rotate-270 text-secondary"></i> Accueil
        </a>
    </div>
    <h1>Tags</h1>
    <div class="mt-2 mb-2 btn btn-info"><a href="{{ path('app_admin_tag_new') }}" class="text-decoration-none text-secondary">
            Créer un nouveau tag</a>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom du tag</th>
                <th>Nom du fichier</th>
                <th>Mis à jour</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr class="position-relative">
                <td>{{ tag.id }}</td>
                <td>{{ tag.name }}</td>
                <td>{{ tag.file }}</td>
                <td>{{ tag.updatedAt ? tag.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_tag_edit', {'slug': tag.slug}) }}"  class="stretched-link">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
