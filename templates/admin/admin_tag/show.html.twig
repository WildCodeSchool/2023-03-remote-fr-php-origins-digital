{% extends 'admin/base.html.twig' %}

{% block title %}Tag{% endblock %}

{% block body %}
    <h1>Tag</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tag.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ tag.name }}</td>
            </tr>
            <tr>
                <th>File</th>
                <td>{{ tag.file }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ tag.updatedAt ? tag.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_tag_index') }}">back to list</a>

    <a href="{{ path('app_admin_tag_edit', {'slug': tag.slug}) }}">edit</a>

    {{ include('admin/admin_tag/_delete_form.html.twig') }}
{% endblock %}
