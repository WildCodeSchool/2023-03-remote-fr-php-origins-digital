<form class="mt-3" method="post" action="{{ path('categories_delete', {'id': category.id}) }}"
      onsubmit="return confirm('Etes-vous sur de vouloir supprimer cette categories ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>
