{% extends 'admin/base.html.twig' %}

{% block title %}Categories {{ category.name }} {% endblock %}

{% block body %}
    <h1>Catégorie : {{ category.name }}</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ category.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ category.name }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td>
                {% if category.file %}
                    <div style="width: 100%; max-width: 400px;">
                        <img src="/uploads/images/{{ category.file }}"
                             alt="{{ category.name }}" class="img-thumbnail" style="width: 200px; height: 200px;">
                    </div>
                {% else %}
                    Pas d'image
                {% endif %}
            </td>
        </tr>
        </tbody>
    </table>

    <button class="btn btn-dark"><a href="{{ path('admin_categories_index') }}"
                                    class="text-decoration-none text-white">Retour
            à la liste des catégories</a></button>
    <button class="btn btn-warning"><a href="{{ path('admin_categories_edit', {'id': category.id}) }}"
                                       class="text-decoration-none text-white">Modifier</a></button>

    {{ include('admin/admin_categories/_delete_form.html.twig') }}
{% endblock %}
