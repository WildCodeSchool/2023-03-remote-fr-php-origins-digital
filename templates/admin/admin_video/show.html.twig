{% extends 'admin/base.html.twig' %}

{% block title %}Video {{ video.title }}{% endblock %}

{% block body %}
    <h1>Video</h1>
    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ video.id }}</td>
        </tr>
        <tr>
            <th>Titre</th>
            <td>{{ video.title }}</td>
        </tr>
        <tr>
            <th>Temps</th>
            <td>{{ video.time }}</td>
        </tr>
        <tr>
            <th>VideoUrl</th>
            <td>{{ video.videoUrl }}</td>
        </tr>
        <tr>
            <th>Nombre de vues</th>
            <td>{{ video.views }}</td>
        </tr>
        <tr>
            <th>Privée</th>
            <td>{{ video.private ? 'Yes' : 'No' }}</td>
        </tr>
        <tr>
            <th>Date de sorties</th>
            <td>{{ video.realeaseDate ? video.realeaseDate|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>A venir</th>
            <td>{{ video.upcoming ? 'Yes' : 'No' }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ video.description }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td>{{ video.image }}</td>
        </tr>
        </tbody>
    </table>
    <button class="btn btn-dark">
        <a href="{{ path('app_admin_video_index') }}" class="text-decoration-none text-white">Retour à la liste des
            vidéos</a>
    </button>

    <button class="btn btn-warning">
        <a href="{{ path('app_admin_video_edit', {'id': video.id}) }}" class="text-decoration-none text-white">Modifier</a>
    </button>

    {{ include('admin/admin_video/_delete_form.html.twig') }}
{% endblock %}
