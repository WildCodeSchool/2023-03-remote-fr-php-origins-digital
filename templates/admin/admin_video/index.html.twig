{% extends 'admin/base.html.twig' %}

{% block title %}Video {% endblock %}

{% block body %}
    <h2>Video</h2>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Titre</th>
            <th>Temps</th>
            <th>Nombre vues</th>
            <th>Privée</th>
            <th>Date sortie</th>
            <th>A venir</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for video in videos %}
            <tr>
                <td>{{ video.id }}</td>
                <td>{{ video.title }}</td>
                <td>{{ video.time }}</td>
                <td>{{ video.views }}</td>
                <td>{{ video.private ? 'Yes' : 'No' }}</td>
                <td>{{ video.realeaseDate ? video.realeaseDate|date('Y-m-d') : '' }}</td>
                <td>{{ video.upcoming ? 'Yes' : 'No' }}</td>
                <td>{{ video.description }}</td>
                <td>
                    <button class="btn btn-dark">
                        <a href="{{ path('app_admin_video_show', {'id': video.id}) }}"
                           class="text-decoration-none text-white">Voir la vidéo</a>
                    </button>
                    <button class="btn btn-warning mt-2">
                        <a href="{{ path('app_admin_video_edit', {'id': video.id}) }}"
                           class="text-decoration-none text-white">Modifier la vidéo</a>
                    </button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
