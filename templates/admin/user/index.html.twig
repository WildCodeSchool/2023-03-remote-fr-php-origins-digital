{% extends 'admin/base.html.twig' %}

{% block title %}Listes des utilisateurs{% endblock %}

{% block body %}

        <div class="mb-4"><a class="text-secondary" href="{{ path('index') }}"><i class="fa-solid fa-arrow-turn-up fa-rotate-270 text-secondary"></i> Accueil
            </a>
        </div>
        <h1>Listes des utilisateurs</h1>
        <div class="mt-2 mb-2 btn btn-info"><a href="{{ path('user_new') }}" class="text-decoration-none text-secondary">
                Créer un nouvel utilisateur</a>
        </div>
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Nom / Prénom</th>
                <th>Pseudo</th>
                <th>Crée le</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr class="position-relative">
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td>{{ user.fullName }}</td>
                    <td>{{ user.pseudo }}</td>
                    <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a href="{{ path('user_edit', {'id': user.id}) }}" class="stretched-link">Modifier
                            l'utilisateur</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    <div class="d-flex justify-content-center">
        {{ knp_pagination_render(users) }}
    </div>
{% endblock %}
