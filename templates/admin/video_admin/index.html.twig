{% extends 'base.html.twig' %}

{% block title %}Liste des vidéos{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            {% include "_partials/adminnav.html.twig" %}
            <main class="col-9 border border-light bg-white p-2">
                <h1 class="text-dark">Liste des vidéos</h1>
                <table class="table">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Url</th>
                        <th>Private</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for video in videos %}
                        <tr>
                            <td>{{ video.id }}</td>
                            <td>{{ video.title }}</td>
                            <td>{{ video.description }}</td>
                            <td>{{ video.videoUrl }}</td>
                            <td>{{ video.private ? 'Yes' : 'No' }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </main>
        </div>
    </div>
{% endblock %}
