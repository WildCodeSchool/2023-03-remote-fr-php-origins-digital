{% extends 'base.html.twig' %}


{% block title %}Catégorie
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="text-center">Documentaire</h1>
		<!-- Swiper -->
		<div class="container-fluid">
			<nav style="--bs-breadcrumb-divider: '/';" aria-label="breadcrumb">
				<ol class="breadcrumb ml-2">
					<li class="breadcrumb-item">
						<a href="/" class="text-decoration-none link-dark">Acceuil</a>
					</li>
					<li class="breadcrumb-item">
						<a href="/categories" class="text-decoration-none link-dark">Catégories</a>
					</li>
					<li class="breadcrumb-item active" aria-current="page">Documentaire</li>
				</ol>
			</nav>
		</div>
		<section>
			<h2 class="mt-4">Nouveauté</h2>
			<div class="swiper mySwiper_nouveaute">
				<div class="swiper-wrapper">
					{% for i in 0..9 %}
						<div class="swiper-slide">
							<video width="100%" height="240" controls>
								<source src="/uploads/{{ i+1 }}.mp4" alt="Vidéo {{ i+1 }}" type="video/mp4">
							</video>
						</div>
					{% endfor %}
				</div>
				<div class="swiper-button-next"></div>
				<div class="swiper-button-prev"></div>
			</div>
		</section>
		<div class="container text-center">
			<div class="row align-items-start">
				<div class="col">
					<div class="card mt-4 mb-4">
						<img src="https://fakeimg.pl/500x200/?text=Image" class="card-img-top" alt="PUB">
					</div>
				</div>
				<div class="col">
					One of three columns
				</div>
				<div class="col">
					One of three columns
				</div>
			</div>
		</div>
		<div class="card mt-4 mb-4">
			<img src="https://fakeimg.pl/1320x200/?text=PUB" class="card-img-top" alt="PUB">
		</div>
	</div>

{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('swiper') }}
{% endblock %}
{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('app') }}
	{{ encore_entry_script_tags('swiper') }}
{% endblock %}
