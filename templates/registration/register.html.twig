{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <section class="container-fluid vh-100 d-flex align-items-center text-secondary">
        <div class="row w-100">
            <!-- Start of left column -->
            <div class="col-12 col-lg-6 d-flex justify-content-center align-items-center">

                <div>
                    <a href="/" class="back-button text-decoration-none">Retour au site <i class="fa-solid fa-reply"></i></a>
                    <h1 class="mb-4">Inscription</h1>

                    {{ form_start(registrationForm) }}

                    <fieldset class="mb-3 mt-3">
                        {{ form_row(registrationForm.fullName) }}
                        {{ form_row(registrationForm.pseudo) }}
                        {{ form_row(registrationForm.email) }}
                        {{ form_row(registrationForm.plainPassword, {
                            label: 'Mot de passe'
                        }) }}
                    </fieldset>

                    <div class="col-md-12">
                        {{ form_label(registrationForm.RGPDConsent, 'J\'accepte les conditions générales') }}
                         <div class="p-1">
                            {{ form_widget(registrationForm.RGPDConsent) }}
                        </div>
                    </div>

                    <button type="submit" class="btn btn-info btn-lg my-3 text-secondary">M'inscrire</button>
                    <a href="{{ path('app_login') }}" class="btn btn-outline-info my-3 text-secondary">Me connecter</a>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
            <!-- End of left column -->

            <!-- Start of right column -->
            <div class="d-none d-lg-block col-lg-6 vh-100">
                <img src="{{ asset('build/images/imgForm.png') }}" alt=""
                     class="img-fluid w-100 h-100 object-fit-cover">
            </div>
            <!-- End of right column -->
        </div>
    </section>

{% endblock %}
