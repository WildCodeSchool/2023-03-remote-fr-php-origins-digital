{% extends 'base.html.twig' %}

{% block title %} Tag
{% endblock %}

{% block body %}
    <h1 class="text-center mt-4 mb-5">{{ tag.name }}</h1>
    {{ dump(videos) }}
    {{ dump(sortedByCatAndTag) }}
    <!-- Swiper -->
    <div class="container-fluid">
        <nav class="ariane" style="--bs-breadcrumb-divider: '/'; " aria-label="breadcrumb">
            <ol class="breadcrumb ml-2 text-light">
                <li class="breadcrumb-item">
                    <a href="/" class="text-decoration-none text-secondary">Accueil</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="{{ path('category_index', {id : category.id}) }}" class="text-decoration-none text-secondary">{{ category.name }}</a>
                </li>
                <li class="breadcrumb-item active text-info" aria-current="page">{{ tag.name }}</li>
            </ol>
        </nav>
        <section>
            <h2 class="mt-5 mb-5">Recommandation</h2>
            <div class="swiper mySwiper_recommandation">
                <div class="swiper-wrapper">
                    {% for video in [sortedByCatAndTag] %}
                        <div class="swiper-slide card border-0 bg-transparent text-white "
                             data-bs-target="#myModal{{ video.id}}" data-bs-toggle="modal">
                            <video class=" recommandationVideo video-js videoPlayerHome hover-to-play w-100"
                                   id="player-home" controls
                                   poster="{{ (image_dir ~ '/' ~ video.image ) | imagine_filter('thumbnail_locked') }}"
                                   preload="none">
                                <source src="{{ video_dir ~ '/' ~ video.videoUrl }}"
                                        alt="Vidéo {{ video.title }}" type="video/mp4">
                            </video>
                            <div class="card-body">
                                <h3 class="card-title">{{ video.title }}</h3>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="swiper-button-next"></div>
                <div class="swiper-button-prev"></div>
            </div>
        </section>
        <div class="container-fluid">
            <section>
                <div>
                    <h2 class="text-center mt-5 mb-5">Top 10 de nos abonnées</h2>
                    <!-- Swiper -->
                    <div class="swiper mySwiper_top">
                        <div class="swiper-wrapper swiper-wrapper-top">
                            {% for i in 0..9 %}
                                <div class="swiper-slide top">
                                    <img src="https://fakeimg.pl/330x330/?text=IMG" class="card-img-top" alt="IMG">
                                </div>
                            {% endfor %}
                        </div>
                        <div class="swiper-button-next"></div>
                        <div class="swiper-button-prev"></div>
                    </div>
                </div>
            </section>
        </div>
        <div class="container card mt-5 mb-5 p-0">
            <img src="https://fakeimg.pl/1320x200/?text=PUB" class="card-img-top" alt="PUB">
        </div>
    </div>

{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('swiper') }}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('app') }}
    {{ encore_entry_script_tags('swiper') }}
{% endblock %}
