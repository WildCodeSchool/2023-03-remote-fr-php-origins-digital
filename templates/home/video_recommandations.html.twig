<div class="container-fluid mt-4">
    <!-- Swiper -->
    <section>
        <h2 class="mt-4">Recommandation</h2>
            <div class="swiper mySwiper_recommandation">
                <div class="swiper-wrapper">
                    {% for video in videos %}
                            <div class="swiper-slide card border-0 bg-transparent text-white p-2"
                                 data-bs-target="#myModal{{ video.id}}" data-bs-toggle="modal">
                                <div class="position-relative">
                                <img src="{{ (image_dir ~ '/' ~ video.image ) | imagine_filter('thumbnail_locked') }}" alt="{{ video.title }}" class="img-fluid">
                                <i class="fa-solid fa-play fa-2xl position-absolute lock"></i>
                                </div>
                                <div class="card-body">
                                    <h3 class="card-title">{{ video.title }}</h3>
                                </div>
                            </div>
                    {% endfor %}
                </div>
                <div class="swiper-button-next"></div>
                <div class="swiper-button-prev"></div>
            </div>
    </section>
</div>

