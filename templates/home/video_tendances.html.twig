<div class="container-fluid mt-4">
    <div class="row">
        <h2 class="mt-4">Tendance</h2>
        {% for i in 0..5 %}
            <div class="col-lg-4 col-md-6">
                <div class="card mt-2 mb-2" style="width: 100%;">
                    <video width="100%" height="280" controls>
                        <source src="/uploads/videos/{{ i+1 }}.mp4" alt="Vidéo {{ i+1 }}" type="video/mp4">
                    </video>
                <h3 class="card-title">Titre</h3>
                <p class="card-text">Nom du créateur</p>
            </div>
        {% endfor %}
    </div>
</div>

