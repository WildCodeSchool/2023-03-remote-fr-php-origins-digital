<div class="container-fluid mt-4">
    <div class="row">
        <h2 class="mt-4">Tendance</h2>
        {% for video in videos %}
            <div class="col-lg-4 col-md-6 d-flex justify-content-center">
                <div class="card mt-2 mb-2 card bg-transparent text-white border-0" style="width: 100%;">
                    <div class="video-container position-relative" data-bs-target="#myModal{{ video.id}}" data-bs-toggle="modal">
                        {% if video.Private and not app.user %}
                        <a href="{{ path('app_login') }}">
                        <img src="{{ ('/uploads/images/' ~ video.imagevideos.0.file ) | imagine_filter('thumbnail_locked') }}" alt="{{ video.title }}" class="img-fluid">
                        </a>
                        {% else %}
                            <video class=" recommandationVideo video-js videoPlayerHome" id="player-home" controls poster="{{ ('/uploads/images/' ~ video.imagevideos.0.file ) | imagine_filter('thumbnail_locked') }}">
                                <source src="/uploads/videos/{{ video.videoUrl }}" alt="VidÃ©o {{ video.title }}" type="video/mp4">
                            </video>
                        {% endif %}
                    </div>
                    <div class="card-body">
                        <h3 class="card-title">{{ video.title }}</h3>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
