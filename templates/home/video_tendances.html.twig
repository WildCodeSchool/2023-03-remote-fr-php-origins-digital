<div class="container-fluid mt-4">
    <div class="row">
        <h2 class="mt-4">Tendance</h2>
        {% for video in videos %}
            <div class="col-lg-4 col-md-6">
                <div class="card mt-2 mb-2" style="width: 100%;">
                    <div class="video-container position-relative w-100 h-280">
                        <video width="100%" height="280" preload="none" controls>
                            <source src="/uploads/videos/{{ video.videoUrl }}" alt="{{ video.title }}" type="video/mp4">
                        </video>
                        {% if video.Private and not app.user %}
                            <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center">
                                <a href="{{ path('app_login') }}">
                                    <img src="{{ asset('build/images/cadenas.png') }}" alt="Private video" style="width: 50px; height: 50px;" />
                                </a>
                            </div>
                        {% endif %}
                    </div>
                    <h3 class="card-title"> {{ video.title }}</h3>
                    <p class="card-text">Nom du cr√©ateur</p>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
