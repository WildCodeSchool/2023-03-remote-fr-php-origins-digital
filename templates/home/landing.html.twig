<div class="container-fluid mt-4">
    <div class="landingPageContainer h-100">
        <div class="mostWatchedMainContainer row justify-content-between h-100">
            {% if mostViewed %}
                <div class="mostWatchedLeftContainer col-md-4 d-flex flex-column justify-content-center align-items-center">
                    <div class=" d-flex justify-content-center align-items-center">
                        <h1 class="p-2 text-center gradient">L'incontournable du moment !</h1>
                    </div>
                    <h2 class="card-title mt-4 p-2"><i class="fa-solid fa-arrow-right-long"></i> {{ mostViewed.title }}</h2>
                </div>
                <div class="mostWatchedRightContainer col-md-8">
                    <div class="border-0 bg-transparent text-white position-relative">
                        <a href="#" data-video-id="{{ mostViewed.id }}" {{ stimulus_action('video_modal', 'findVideo') }}>
                            <img class="video-js videoPlayerHome videoPlayerMostViewed mostViewed img-fluid"
                                 id="player-home" alt="{{ mostViewed.title }}"
                                 src="{{ (image_dir ~ '/' ~ mostViewed.image ) | imagine_filter('mostViewed') }}">
                            <i class="fa-solid fa-play lock fa-2xl position-absolute"></i>
                        </a>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>
