{% extends 'base.html.twig' %}

{% block title %}Categories
{% endblock %}

{% block body %}
	<div class="container mb-2">
		<h1 class="text-center m-3 mb-3">Categories</h1>
	</div>
	<div class="container-fluid">
		<nav style="--bs-breadcrumb-divider: '/';" aria-label="breadcrumb">
			<ol class="breadcrumb ml-2">
				<li class="breadcrumb-item">
					<a href="/" class="text-decoration-none link-dark">Accueil</a>
				</li>
				<li class="breadcrumb-item active" aria-current="page">Categories</li>
			</ol>
		</nav>
	</div>
	<div class="container margin-left-2">
		<div class="row g-4 justify-content-center">
            {% for category in categories %}
                <div class="col-lg-5">
                    <div class="card text-center bg-image">
                        {% for image in category.imagesCategories %}
                            <a class="stretched-link" href="/">
                                <img src="/uploads/images/{{ image.file }}"
                                     class="card-img-top" alt="{{ category.name }}">
                            </a>
                        {% endfor %}
                        <div class="card-img-overlay">
                            <h5 class="card-title text-light bg-text">{{ category.name }}</h5>
                        </div>
                    </div>
                </div>
            {% endfor %}
		</div>
		<div class="card mt-4 mb-4">
			<img src="https://fakeimg.pl/1320x200/?text=PUB" class="card-img-top" alt="PUB">
		</div>
	</div>
{% endblock %}
